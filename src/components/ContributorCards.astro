---
import type { ContributorStats } from "../utils/github";

export interface Props {
  contributors: ContributorStats[];
}

const { contributors } = Astro.props;
---

<div class="contributors-card">
  <div class="contributors-header">
    <h3 class="contributors-title">
      <div class="contributors-icon">
        <i class="fas fa-users"></i>
      </div>
      貢献者
    </h3>
  </div>
  <div class="contributors-body">
    <div class="contributors-grid">
      {
        contributors.slice(0, 12).map((contributor, index) => (
          <div class="contributor-card">
            <div class="contributor-rank">#{index + 1}</div>
            <div class="contributor-avatar">
              <img src={contributor.avatar_url} alt={contributor.name} />
              <div
                class={`status-indicator ${contributor.isActive ? "active" : "inactive"}`}
              />
            </div>
            <div class="contributor-info">
              <h4 class="contributor-name">{contributor.name}</h4>
              <p class="contributor-username">@{contributor.login}</p>
              <div class="contributor-stats">
                <div class="stat">
                  <i class="fas fa-code-commit" />
                  <span>{contributor.commits.toLocaleString()} コミット</span>
                </div>
                <div class="stat">
                  <i class="fas fa-folder" />
                  <span>{contributor.repositories.length} リポジトリ</span>
                </div>
              </div>
              {contributor.lastActivity && (
                <div class="last-activity">
                  <i class="fas fa-clock" />
                  最終活動:{" "}
                  {new Date(contributor.lastActivity).toLocaleDateString(
                    "ja-JP"
                  )}
                </div>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  .contributors-card {
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
    transition: var(--transition-base);
  }

  .contributors-card:hover {
    box-shadow: var(--shadow-md);
  }

  .contributors-header {
    padding: var(--spacing-6);
    border-bottom: 1px solid var(--color-border);
    background: var(--color-gray-50);
  }

  .contributors-title {
    margin: 0;
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-gray-900);
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
  }

  .contributors-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background: var(--color-gray-100);
    border-radius: var(--radius-md);
    color: var(--color-gray-600);
  }

  .contributors-body {
    padding: var(--spacing-6);
  }

  .contributors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--spacing-6);
  }

  .contributor-card {
    position: relative;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-6);
    text-align: center;
    transition: var(--transition-base);
    overflow: hidden;
  }

  .contributor-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-gray-300);
  }

  .contributor-rank {
    position: absolute;
    top: var(--spacing-3);
    right: var(--spacing-3);
    background: var(--color-gray-900);
    color: white;
    padding: var(--spacing-1) var(--spacing-2);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
  }

  .contributor-avatar {
    position: relative;
    display: inline-block;
    margin-bottom: var(--spacing-4);
  }

  .contributor-avatar img {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
    border: 2px solid var(--color-border);
    transition: var(--transition-base);
  }

  .contributor-card:hover .contributor-avatar img {
    border-color: var(--color-gray-400);
  }

  .status-indicator {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    border: 2px solid white;
  }

  .status-indicator.active {
    background: var(--color-gray-700);
  }

  .status-indicator.inactive {
    background: var(--color-gray-400);
  }

  .contributor-info {
    text-align: center;
  }

  .contributor-name {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-gray-900);
    margin: 0 0 var(--spacing-1) 0;
  }

  .contributor-username {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
    margin: 0 0 var(--spacing-4) 0;
  }

  .contributor-stats {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
    margin-bottom: var(--spacing-4);
  }

  .stat {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
    font-size: var(--text-sm);
    color: var(--color-gray-700);
  }

  .stat i {
    color: var(--color-gray-500);
    width: 1rem;
  }

  .last-activity {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-1);
    font-size: var(--text-xs);
    color: var(--color-gray-500);
    border-top: 1px solid var(--color-border);
    padding-top: var(--spacing-4);
  }

  .last-activity i {
    color: var(--color-gray-400);
  }

  @media (max-width: 768px) {
    .contributors-header {
      padding: var(--spacing-4);
    }

    .contributors-body {
      padding: var(--spacing-4);
    }

    .contributors-title {
      font-size: var(--text-base);
    }

    .contributors-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: var(--spacing-4);
    }

    .contributor-card {
      padding: var(--spacing-4);
    }
  }
</style>
