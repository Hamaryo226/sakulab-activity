    @apply bg-white border border-gray-200 rounded-xl overflow-hidden hover:shadow-md transition;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .bento-grid {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: repeat(2, minmax(100px, auto));
    }

    .bento-large {
      grid-column: span 2;
      grid-row: span 2;
    }

    .bento-wide {
      grid-column: span 3;
      grid-row: span 1;
    }

