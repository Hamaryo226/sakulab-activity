    .bento-unified-header {
      margin-bottom: 1rem;
    }

    .bento-unified-title {
      font-size: 0.875rem;
    }

    .bento-unified-body {
      gap: 1rem;
    }

    .bento-metric-section {
      padding: 0.75rem;
    }

    .bento-metric-value {
      font-size: 1.5rem;
    }

    .bento-icon-medium {
      width: 2.5rem;
      height: 2.5rem;
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
    }
  }

  /* Grid utilities */
  .grid {
    display: grid;
  }

  .grid-cols-2 {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .lg\\:grid-cols-2 {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .lg\\:col-span-2 {
    grid-column: span 2 / span 2;
  }

