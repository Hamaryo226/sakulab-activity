    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .bento-metric-header i {
    color: #374151;
    font-size: 0.875rem;
  }

  .bento-metric-value {
    font-size: 1.75rem;
    font-weight: 800;
    color: #111827;
    line-height: 1;
    margin-bottom: 0.75rem;
  }

  .bento-metric-total {
    font-size: 1rem;
    font-weight: 500;
    color: #6b7280;
  }

  .bento-chart-section {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .bento-chart-header {
    text-align: center;
    margin-bottom: 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .bento-mini-chart {
    display: flex;
    justify-content: space-between;
    align-items: end;
    gap: 0.25rem;
    height: 50px;
    padding: 0 0.5rem;
  }

  .bento-bar-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }

  .bento-bar {
    width: 100%;
    max-width: 12px;
    background: linear-gradient(180deg, #374151, #111827);
    border-radius: 2px 2px 0 0;
    transition: all 0.2s ease;
    margin-bottom: 0.25rem;
  }

  .bento-bar:hover {
    background: linear-gradient(180deg, #4b5563, #1f2937);
  }

  .bento-bar-label {
    font-size: 0.625rem;
    color: #9ca3af;
    text-align: center;
    line-height: 1;
    white-space: nowrap;
    transform: rotate(-45deg);
    transform-origin: center;
  }

  /* Legacy stat-card styles */
  .stat-card {
    @apply bg-white border border-gray-200 rounded-xl p-6 text-center transition hover:shadow-md hover:border-gray-300;
  }

  .stat-icon {
    @apply w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center mx-auto mb-4;
  }

  .stat-icon i {
    @apply text-gray-700 text-xl;
  }

